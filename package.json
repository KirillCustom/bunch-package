{
  "name": "bunch-package",
  "version": "1.0.1",
  "description": "Patch management tool for Bun - alternative to patch-package",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "bunch-package": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build index.ts --outfile=dist/index.js --target=bun",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "bun",
    "patch",
    "npm",
    "postinstall",
    "dependency",
    "fix",
    "monkey-patch",
    "patch-package"
  ],
  "author": "Kirill Custom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KirillCustom/bunch-package.git"
  },
  "bugs": {
    "url": "https://github.com/KirillCustom/bunch-package/issues"
  },
  "homepage": "https://github.com/KirillCustom/bunch-package#readme",
  "engines": {
    "bun": ">=1.0.0"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  }
}